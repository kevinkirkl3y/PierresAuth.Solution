@{
  Layout = "_Layout";
}
<div class="container">
  @model PierresAuth.Models.Treat;
  <h2>Add Baked Good</h2>
  <hr />

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.TreatId)

    @Html.Label("TreatType")<br>
    @Html.TextBoxFor(model => model.TreatType)<br>

    <br><input type="submit" value="Save" />
  }
  <br><p>@Html.ActionLink("Return to List of Baked Goods", "Index")</p>
</div>