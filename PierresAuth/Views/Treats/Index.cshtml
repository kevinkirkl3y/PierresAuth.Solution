@{
  Layout = "_Layout";
}
<div class="container">
  @using PierresAuth.Models;
  @model List<PierresAuth.Models.Treat>
  <h1>Current Baked Goods</h1>
  <hr />
  @if (@Model.Count == 0)
  {
    <h3>Our pastry display is currently empty.</h3>
  }
  else
  {
    <ul class="no-bullets">
      @foreach (Treat treat in Model)
      {
        <li>@Html.ActionLink($"{treat.TreatType}", "Details", new { id = treat.TreatId })</li> <br>  
      }
    </ul>
  }
  <br><p>@Html.ActionLink("Bake New Treat", "Create")</p>
  <br><p>@Html.ActionLink("Homepage", "Index", "Home")</p>
</div>
