@{
  Layout = "_Layout";
}
<div class="container">
  @model PierresAuth.Models.Flavor;
  <h2>Add Flavor Profile</h2>
  <hr />

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.FlavorId)

    @Html.Label("FlavorType")<br>
    @Html.TextBoxFor(model => model.FlavorType)<br>

    <br><input type="submit" value="Save" />
  }
  <br><p>@Html.ActionLink("Return to Flavor List", "Index")</p>
</div>