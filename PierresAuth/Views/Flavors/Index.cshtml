@{
  Layout = "_Layout";
}
<div class="container">
  @using PierresAuth.Models;
  @model List<PierresAuth.Models.Flavor>
  <h1>Currently Offered Flavors</h1>
  <hr />
  @if (@Model.Count == 0)
  {
    <h3>Our flavors of the day have not been updated.</h3>
  }
  else
  {
    <ul class="no-bullets">
      @foreach (Flavor flavor in Model)
      {
        <li>@Html.ActionLink($"{flavor.FlavorType}", "Details", new { id = flavor.FlavorId })</li> <br>  
      }
    </ul>
  }
  <br><p>@Html.ActionLink("Add Flavor Profile", "Create")</p>
  <br><p>@Html.ActionLink("Homepage", "Index", "Home")</p>
</div>
